<div class="habitslist container">
    {{#each habits}}
        <div class="habit-container">
            <h1 class="habit-title">{{this.title}}</h1>
            <p class="habit-category">{{this.category}}</p>
            <ul class="days-container" id="days-container">
                {{#each this.days}}
                    <li class="day">{{this}}</li>
                {{/each}}
            </ul>
            <div class="list-options-container">
                <form action="/habits/update" method="get">
                    <input type="hidden" name="id" value="{{this.id}}" />
                    <input
                        type="submit"
                        value="Modificar"
                        class="button option-button update-button"
                    />
                </form>
                <button
                    class="button option-button delete-button"
                    id="delete-button"
                >Eliminar</button>
                <form action="/habits/detail" method="get">
                    <input type="hidden" name="id" value="{{this.id}}" />
                    <input
                        type="submit"
                        value="Detalles"
                        class="button option-button"
                    />
                </form>
            </div>
        </div>
        <div class="blur-container" id="blur-container">
            <div class="confirm-container" id="confirm-container">
                <p class="confirm-text">¿Está Seguro?</p>
                <div class="confirm-buttons-container">
                    <form action="/habitsDelete" method="get">
                        <input type="hidden" name="id" value="{{this.id}}" />
                        <input type="submit" value="Si" class="button" />
                    </form>
                    <button class="button confirm-button-no">No</button>
                </div>
            </div>
        </div>
    {{else}}
        <p class="no-habits">No Hay Ningun Habito Creado</p>
    {{/each}}
</div>
