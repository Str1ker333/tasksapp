<div>
    <input
        class="title input"
        type="text"
        name="title"
        placeholder="Titulo"
        value="{{title}}"
        autofocus
        required
    />

    <textarea
        class="description input"
        name="description"
        rows="10"
        placeholder="Descripcion"
        required
        >{{description}}</textarea>

    <label for="finished-input">Termina el:</label>
    <input
        class="finished input"
        type="date"
        name="finished_at"
        id="finished-input"
        value="{{finish_at}}"
        required
    />

    <label for="category-select">Categoria:</label>
    <select
        name="category"
        id="category-select"
        class="category input"
        required
    >
        <option hidden>Seleccione</option>
        <option {{#if (compare this.category 'Academica')}}
                selected
                {{/if}} 
                value="Academica">Academica</option>

        <option {{#if (compare this.category 'Salud')}}
                selected
                {{/if}}
                value="Salud">Salud</option>

        <option {{#if (compare this.category 'Practica')}}
                selected
                {{/if}}
                value="Practica">Practica</option>

    </select>
</div>
