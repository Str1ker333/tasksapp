<div>
    <input
        type="text"
        name="title"
        class="input"
        placeholder="Titulo"
        value="{{title}}"
        autofocus
        required
    />
    <textarea
        class="description input"
        name="description"
        rows="10"
        placeholder="Descripcion"
        required
    >{{description}}</textarea>
    <label for="days-container">Dias:</label>
    <div class="days-container" id="days-container">
        <input type="text" readonly class="day" value="Lunes">
        <input type="text" readonly class="day" value="Martes">
        <input type="text" readonly class="day" value="Miercoles">
        <input type="text" readonly class="day" value="Jueves">
        <input type="text" readonly class="day" value="Viernes">
        <input type="text" readonly class="day" value="Sabado">
        <input type="text" readonly class="day" value="Domingo">
    </div>
    <label for="time-input">Hora:</label>
    <input type="time" name="time_to_do" id="time-input" class="input">
    <label for="category-select">Categoria:</label>
    <select
        name="category"
        id="category-select"
        class="category input"
        required
    >
        <option hidden>Seleccione</option>
        <option {{#if (compare this.category 'Academica')}}
                selected
                {{/if}} 
                value="Academica">Academica</option>

        <option {{#if (compare this.category 'Salud')}}
                selected
                {{/if}}
                value="Salud">Salud</option>

        <option {{#if (compare this.category 'Practica')}}
                selected
                {{/if}}
                value="Practica">Practica</option>

    </select>
</div>    
