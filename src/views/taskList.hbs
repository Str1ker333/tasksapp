<div class="tasklist container">
    <div>
        {{#each tasks}}
            <div class="task-container">
                <h1 class="task-title">{{this.title}}</h1>
                <p class="task-category">{{this.category}}</p>
                <div class="task-options-container">

                    <form action="/tasks/update" method="get">
                        <input type="hidden" name="id" value="{{this.id}}" />
                        <input
                            type="submit"
                            value="Modificar"
                            class="button option-button update-button"
                        />
                    </form>
                    <form action="/delete" method="get">
                        <input type="hidden" name="id" value="{{this.id}}" />
                        <input
                            type="submit"
                            value="Eliminar"
                            class="button option-button delete-button"
                        />
                    </form>
                    <form action="/tasks/detail" method="get">
                        <input type="hidden" name="id" value="{{this.id}}" />
                        <input
                            type="submit"
                            value="Detalles"
                            class="button option-button"
                        />
                    </form>
                </div>
            </div>
        {{else}}
            <p class="no-tasks">No hay ninguna tarea creada</p>
        {{/each}}
    </div>
    <button class="tasklist-button button">
        <a href="/tasks/add">Agregar Tarea</a>
    </button>
</div>
