<div class="tasklist container">
    <table border="1" class="tasklist-table">
        <thead>
            <td>Titulo</td>
            <td>Descripcion</td>
            <td>Se creo el</td>
            <td>Finaliza el</td>
            <td>Categoria</td>
            <td colspan="3" align="center">Opciones</td>
        </thead>
        <tbody>
            {{#each tasks}}
                <tr>
                    <td>{{this.title}}</td>
                    <td>{{this.description}}</td>
                    <td>{{this.created_at}}</td>
                    <td>{{this.finish_at}}</td>
                    <td>{{this.category}}</td>
                    <td>
                        <form action="/tasks/update" method="get">
                            <input type="hidden" name="id" value="{{this.id}}">
                            <input type="submit" value="Modificar" class="button option-button">
                        </form>
                    </td>
                    <td>
                        <form action="/delete" method="get">
                            <input type="hidden" name="id" value="{{this.id}}">
                            <input type="submit" value="Eliminar" class="button option-button">
                        </form>
                    </td>
                    <td>
                        <a href="/tasks/details" class="button option-button">Detalles</a>
                    </td>
                </tr>
            {{/each}}
        </tbody>
    </table>
    <button class="tasklist-button button">
        <a href="/tasks/add">Agregar Tarea</a>
    </button>
</div>
